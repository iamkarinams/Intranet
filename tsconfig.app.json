{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "useDefineForClassFields": false,
    "lib": [
      "es2022",
      "dom"
    ],
    "skipLibCheck": true
  },
  "files": [
    "src/main.ts",
    "src/main.server.ts",
    "server.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
